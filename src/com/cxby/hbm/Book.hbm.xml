<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.cxby.domain"
                   default-lazy="false">
    <class name="Book">
        <id name="id">
            <generator class="increment"/>
        </id>
        <property name="name"/>
        <property name="price"/>
        <property name="productor"/>
        <property name="type"/>
        <property name="hot"/>
    </class>
</hibernate-mapping>